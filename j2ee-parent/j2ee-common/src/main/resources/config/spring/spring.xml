<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<!-- properties配置文件 -->
	<import resource="classpath:/config/spring/spring-properties.xml" />
	<!-- 数据库连接池 -->
	<import resource="classpath:/config/spring/spring-pool.xml" />
	<!-- 通用配置 -->
	<import resource="classpath:/config/spring/spring-common.xml" />
	<!-- 权限配置 -->
	<import resource="classpath:/config/spring/spring-shiro.xml" />
</beans>