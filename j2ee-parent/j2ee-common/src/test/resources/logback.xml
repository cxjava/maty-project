<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

	<!-- 日志存放的路径 ,默认为tomcat下面的logs -->
	<property name="USER_HOME" value="${catalina.base}" />

	<!-- 输出到窗口 -->
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date{HH:mm:ss.SSS} %-5level %logger{60} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.springframework.jms.listener" level="ERROR" />
	<logger name="java.sql.Connection" level="DEBUG" />
	<logger name="java.sql.Statement" level="DEBUG" />
	<logger name="java.sql.PreparedStatement" level="DEBUG" />
	<logger name="com.maty.j2ee" level="DEBUG" />

	<root level="info">
		<appender-ref ref="stdout" />
	</root>
</configuration>